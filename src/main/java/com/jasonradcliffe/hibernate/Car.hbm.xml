<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.jasonradcliffe.hibernate">

    <class name="Car" table="Car">
 		<id name="CarID" column="CarID">
            <generator class="identity"/>
        </id>
        <property name="LicensePlate" column="LicensePlate" />
        <property name="Make" column="Make"/>
        <property name="Model" column="Model"/>
        <property name="ModelYear" column="ModelYear"/>
        <property name="OdometerReading" column="OdometerReading"/>
	</class>

</hibernate-mapping>